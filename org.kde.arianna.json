{
    "id": "org.kde.arianna",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-22.08",
    "command": "arianna",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home:ro",
        "--env=BALOO_DB_PATH=.local/share/baloo",
        "--talk-name=org.kde.baloo"
    ],
    "modules": [
        {
            "name": "kirigamiaddons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-0.8.0.tar.xz",
                    "sha256": "3741a940fa688f53c7d9bdf607b1c6991f6d690e9ce826e8c76794336c594bcf",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "lmdb",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.30/openldap-LMDB_0.9.30.tar.gz",
                    "sha256": "8c5a93ac3cc97427c54571ad5a6140b7469389d01e6d2f43df39f96d3a4ccef7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "baloo",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.107/baloo-5.107.0.tar.xz",
                    "sha256": "e2434e75afeabd260dea3b32b474f09bbc9dd91c215924f8fdd76b98fa777a44",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "arianna",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/arianna/arianna-1.0.1.tar.xz",
                    "sha256": "b5959f5a208dbb1f54cb696908236470cf2fc3ed67e49115050537b0fef8f326",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 341523,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/arianna/arianna-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
