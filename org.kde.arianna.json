{
    "id": "org.kde.arianna",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.8",
    "command": "arianna",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home:ro",
        "--env=BALOO_DB_PATH=.local/share/baloo",
        "--env=QML2_IMPORT_PATH=/app/qml:/app/lib/qml:/app/lib64/qml",
        "--env=QT_PLUGIN_PATH=/app/plugins:/app/lib64/plugins:/app/lib/plugins:/usr/share/runtime/lib/plugins",
        "--talk-name=org.kde.baloo"
    ],
    "modules": [
        {
            "name": "kirigamiaddons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.7.0.tar.xz",
                    "sha256": "7d854975185cf740de486d84f1e2ec3e4eadb66ac9fb897214cba9ab8cc492b1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "lmdb",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.33/openldap-LMDB_0.9.33.tar.gz",
                    "sha256": "476801f5239c88c7de61c3390502a5d13965ecedef80105b5fb0fcb8373d1e53",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "baloo",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/6.13/baloo-6.13.0.tar.xz",
                    "sha256": "5b4574d9a4a080bdc975e931bd411a7386a0c17ff0d5c5751dd26c92010133f8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "qthttpserver",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.qt.io/official_releases/qt/6.9/6.9.0/submodules/qthttpserver-everywhere-src-6.9.0.tar.xz",
                    "sha256": "91d2cfef1b4c4c09c6189ab26a3a0afa02f0e9512683aecf4d1b44e56112ae73",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 7927,
                        "stable-only": true,
                        "url-template": "https://download.qt.io/official_releases/qt/$major.$minor/$version/submodules/qthttpserver-everywhere-src-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "arianna",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.04.0/src/arianna-25.04.0.tar.xz",
                    "sha256": "cdba56461f1fd5ddf07943e0216b12b10451dd8723a7c08664835ffe2f4af1ba",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/arianna-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
