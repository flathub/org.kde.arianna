{
    "id": "org.kde.arianna",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.7",
    "command": "arianna",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home:ro",
        "--env=BALOO_DB_PATH=.local/share/baloo",
        "--talk-name=org.kde.baloo"
    ],
    "modules": [
        {
            "name": "kirigamiaddons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-0.11.0.tar.xz",
                    "sha256": "05296c5afbe6804308bf9c0d2751f3b748b40d00fa784946d1dcdf3af4bffbad",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "lmdb",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.33/openldap-LMDB_0.9.33.tar.gz",
                    "sha256": "476801f5239c88c7de61c3390502a5d13965ecedef80105b5fb0fcb8373d1e53",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "baloo",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.115/baloo-5.115.0.tar.xz",
                    "sha256": "95cb2038efc4b32f3a17d5592bf247815ea6d02fb8707e04b65bdd80d851c108",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "arianna",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.5/src/arianna-23.08.5.tar.xz",
                    "sha256": "effdbba596582f90a74174e9245b49284c3081829f8ca8dd9bfd0392d028c365",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/arianna-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
