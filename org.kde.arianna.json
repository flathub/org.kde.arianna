{
    "id": "org.kde.arianna",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-22.08",
    "command": "arianna",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home:ro",
        "--env=BALOO_DB_PATH=.local/share/baloo",
        "--talk-name=org.kde.baloo"
    ],
    "modules": [
        {
            "name": "kirigamiaddons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-0.11.0.tar.xz",
                    "sha256": "05296c5afbe6804308bf9c0d2751f3b748b40d00fa784946d1dcdf3af4bffbad",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "lmdb",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.31/openldap-LMDB_0.9.31.tar.gz",
                    "sha256": "d35d4f6f46313d62fd342c9dcbf574432919ce5e802d2b6cbe2ebd549821e5c4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "baloo",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.110/baloo-5.110.0.tar.xz",
                    "sha256": "36a85d71cacc7384531e84f7f363cbf4ad0c41637ca1678f9a35dc7faeb7e22d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "arianna",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.2/src/arianna-23.08.2.tar.xz",
                    "sha256": "84abd45e04194e5e3d9ddb102a7ab7c81e0d273fa9d38ba2ee256cf40c6e5fe9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/arianna-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
